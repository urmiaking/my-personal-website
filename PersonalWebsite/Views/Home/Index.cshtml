<section class="mh-blog" id="mh-blog">
    <div class="container">
        <div class="row section-separator wow fadeInUp" data-wow-duration="0.8s" data-wow-delay="0.1s">
            <div class="col-sm-12 section-title">
                <h3>آخرین نوشته های من</h3>
            </div>
            @foreach (var blog in Model.Blogs)
            {
                <div class="col-sm-12 col-md-4">
                    <div class="mh-blog-item dark-bg">
                        <img src="/images/blog/@blog.ImageUrl" alt="" class="img-fluid">
                        <div class="blog-inner">
                            <h2><a href="#">@blog.Title</a></h2>
                            <div class="mh-blog-post-info">
                                <ul>
                                    <li><a>@blog.Author</a><strong></strong></li>
                                    <li><a>@blog.DateTime.ToPersianDateString()</a><strong></strong></li>
                                </ul>
                            </div>
                            <p>@blog.ShortDescription</p>
                            <a asp-area="" asp-controller="Blog" asp-action="GetBlog" asp-route-id=@blog.Id>ادامه مطلب</a>
                        </div>
                    </div>
                </div>
            }
        </div>
        <div class="text-center wow fadeInUp" data-wow-duration="0.8s" data-wow-delay="0.2s">
            <a asp-controller="Blog" asp-action="Index" class="btn btn-info">آرشیو بلاگ ها</a>
        </div>
    </div>
</section>