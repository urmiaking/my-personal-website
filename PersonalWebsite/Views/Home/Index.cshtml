<!--
==================
    ABOUT
=================
-->
<section class="mh-about" id="mh-about">
    <div class="container">
        <div class="row section-separator">
            <div class="col-sm-12 col-md-6">
                <div class="mh-about-img shadow-2 wow fadeInUp" data-wow-duration="0.8s" data-wow-delay="0.4s">
                    <img src="/images/@Model.AboutMe.Image" alt="" class="img-fluid">
                </div>
            </div>
            <div class="col-sm-12 col-md-6">
                <div class="mh-about-inner">
                    <h2 class="wow fadeInUp" data-wow-duration="0.8s" data-wow-delay="0.1s">درباره من</h2>
                    <p class="justify wow fadeInUp" data-wow-duration="0.8s" data-wow-delay="0.2s">
                        @Model.AboutMe.Description
                    </p>
                    <div class="mh-about-tag wow fadeInUp" data-wow-duration="0.8s" data-wow-delay="0.3s">
                        <ul>
                            @foreach (var technology in Model.AboutMe.Technologies)
                            {
                                <li><span>@technology.Title</span></li>
                            }
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!--
===================
    SERVICES
===================
-->
<section class="mh-service">
