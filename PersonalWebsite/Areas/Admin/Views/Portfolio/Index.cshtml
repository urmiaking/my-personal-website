@model PortfolioViewModel
@{
    ViewData["Title"] = "مدیریت نمونه کارها";
    Layout = "_MainLayout";
    var i = 0;
}

<div class="container">
    <div class="text-center">
        <button class="btn btn-rounded btn-info btn-block" data-toggle="modal" data-target="#add-portfolio-modal"><i class="fa fa-pencil">&nbsp;</i> افزودن نمونه کار جدید </button>
        <br />
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="card-box">
                <h4 class="header-title m-t-0 m-b-30">لیست نمونه کار ها</h4>
                @if (Model.WorkSamples.Any())
                {
                    <table class="table table table-hover m-0">
                        <thead>
                            <tr>
                                <th>
                                    عنوان
                                </th>
                                <th>دسته بندی</th>
                                <th>عملیات</th>
                            </tr>
                        </thead>

                        <tbody>
                            @foreach (var item in Model.WorkSamples)
                            {
                                var deleteButtonId = "delete-btn-" + i;
                                var editButtonId = "edit-btn-" + i;
                                var editModalId = "edit-modal-" + i;
                                <tr id="row-@i">
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Title)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Detail.Title)
                                    </td>
                                    <td>
                                        <a id="@editButtonId" class="btn btn-sm btn-success" data-toggle="modal" data-target="#@editModalId">ویرایش</a> |

                                        <a id="@deleteButtonId" class="btn btn-sm btn-danger">حذف</a>
                                    </td>
                                </tr>
                                <script>
                                    $('#@deleteButtonId').click(function() {
                                        swal({
                                                title: "مطمئنی ؟؟",
                                                text: "",
                                                type: "error",
                                                showCancelButton: true,
                                                confirmButtonClass: 'btn-danger waves-effect waves-light',
                                                confirmButtonText: 'بله!',
                                                closeOnConfirm: false
                                            },
                                            function(isConfirm) {
                                                if (isConfirm) {
                                                    $.ajax({
                                                        url: "/Portfolio/Delete/",
                                                        type: "POST",
                                                        data: {
                                                            id: @item.Id
                                                        },
                                                        dataType: "html",
                                                        success: function() {
                                                            swal("انجام شد!",
                                                                "نمونه کار مورد نظر با موفقت حذف شد!",
                                                                "success");
                                                            $("#row-@i").hide("slow",
                                                                function() {
                                                                    $("#row-@i").remove();
                                                                });
                                                        },
                                                        statusCode: {
                                                            404: function () {
                                                                swal({
                                                                        title: "دسترسی غیر مجاز!",
                                                                        text: "لطفا از دستکاری داده های ارسالی اجتناب کنید!",
                                                                        type: "error",
                                                                        showCancelButton: false,
                                                                        confirmButtonClass: 'btn-danger waves-effect waves-light',
                                                                        confirmButtonText: 'باشه ببخشید!',
                                                                        closeOnConfirm: true
                                                                    }
                                                                );
                                                            }
                                                        }
                                                    });
                                                }
                                            });
                                    });
                                </script>
                                <div id="@editModalId" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true" style="display: none;">
                                    <div class="modal-dialog">
                                        <div class="modal-content">
                                            <form method="post" asp-area="Admin" asp-controller="Portfolio" asp-action="Edit">
                                                <input type="hidden" value="@item.Id" name="id" />
                                                <div class="modal-header">
                                                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                                                    <h4 class="modal-title">ویرایش نمونه کار</h4>
                                                </div>
                                                <div class="modal-body">
                                                    <div class="row">
                                                        <div class="col-md-12">
                                                            <div class="form-group">
                                                                <label for="categoryNameEdit" class="control-label">عنوان</label>
                                                                <input type="text" class="form-control" id="categoryNameEdit" value="@item.Title" required="" name="categoryName" placeholder="نام دسته">
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="modal-footer">
                                                    <button type="button" class="btn btn-default waves-effect" data-dismiss="modal">بستن</button>
                                                    <button type="submit" class="btn btn-info waves-effect waves-light">ذخیره</button>
                                                </div>
                                            </form>

                                        </div>
                                    </div>
                                </div>
                                i++;
                            }
                        </tbody>
                    </table>
                }
                else
                {
                    <div class="text-center">
                        هیچ نمونه کاری وجود ندارد
                    </div>
                }

            </div>
        </div>
    </div>
</div>


<div id="add-portfolio-modal" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true" style="display: none;">
    <div class="modal-dialog">
        <div class="modal-content">
            <form method="post" asp-area="Admin" asp-controller="Portfolio" asp-action="Add">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                    <h4 class="modal-title">افزودن نمونه کار</h4>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group">
                                <label asp-for="WorkSample.Title" class="control-label"></label>
                                <input asp-for="WorkSample.Title" type="text" class="form-control" placeholder="عنوان">
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default waves-effect" data-dismiss="modal">بستن</button>
                    <button type="submit" class="btn btn-info waves-effect waves-light">ذخیره</button>
                </div>
            </form>

        </div>
    </div>
</div><!-- /.modal -->